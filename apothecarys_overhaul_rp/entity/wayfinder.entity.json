{
    "format_version": "1.20.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "apotso:wayfinder",
            "materials": {
				"default": "entity_alphatest"
			},
            "textures": {
				"base": "textures/entity/settler/settler",
				"base2": "textures/entity/settler/settler",
				"base3": "textures/entity/settler/settler",
				"base4": "textures/entity/settler/settler_1",
				"base5": "textures/entity/settler/settler_1",
				"base6": "textures/entity/settler/settler_1",
				"unskilled": "textures/entity/settler/unskilled",
				"raiser": "textures/entity/settler/raiser",
				"shaper": "textures/entity/settler/shaper",
				"host": "textures/entity/settler/host",
                "wafinder": "textures/entity/settler/wayfinder"
			},
			"geometry": {
				"default": "geometry.human"
			},
			"scripts": {
				"pre_animation": [
					"variable.num_guilds = 5;",
					"variable.guild_index = (query.variant < variable.num_guilds ? query.variant : 0);",
				  	"variable.tcos0 = (Math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / variable.gliding_speed_value) * 57.3;",
				  	"variable.attack = Math.sin((1.0 - (1.0 - variable.attack_time) * (1.0 - variable.attack_time)) * 180.0) * 57.3;",
				  	"variable.attack2 = Math.sin(variable.attack_time * 180.0) * 57.3;",
				  	"variable.z_bob = Math.cos(query.life_time * 103.13244) * 2.865 + 2.865;",
				  	"variable.x_bob = Math.sin(query.life_time * 76.776372) * 2.865;"
				],
				"animate": [
				    { "admire": "query.is_admiring" },
				    { "humanoid_big_head": "query.is_baby" },
				    { "celebrate_hunt": "query.is_celebrating" },
                    { "celebrate_hunt_special": "query.is_celebrating_special" },
                    {	"get_in_bed": "query.is_sleeping"},
                    "move",
					{"charging":"query.is_charging"},
					{ "bow_and_arrow": "query.facing_target_to_range_attack && !query.is_sprinting"},
                    "bob",
                    "look_at_target_controller",
                    "piglin_attack_controller",
                    "riding_controller"
				]
			},
			"animations": {
				"move": "animation.humanoid.move",
        		"bob": "animation.humanoid.bob",
				"bow_and_arrow": "animation.humanoid.bow_and_arrow",
        		"humanoid_big_head": "animation.humanoid.big_head",
        		"admire": "animation.piglin.admire",
        		"celebrate_hunt": "animation.piglin.celebrate_hunt",
        		"celebrate_hunt_special": "animation.piglin.celebrate_hunt_special",
				"charging": "animation.humanoid.charging",
				"get_in_bed": "animation.villager.get_in_bed",
        		"look_at_target_controller": "controller.animation.humanoid.look_at_target",
        		"look_at_target_default": "animation.humanoid.look_at_target.default",
        		"look_at_target_gliding": "animation.humanoid.look_at_target.gliding",
        		"look_at_target_swimming": "animation.humanoid.look_at_target.swimming",

        		"piglin_attack_controller": "controller.animation.piglin.attack",
				

        		"riding_controller": "controller.animation.humanoid.riding",
        		"riding.arms": "animation.humanoid.riding.arms",
        		"riding.legs": "animation.humanoid.riding.legs"
			},
			"render_controllers": [
				"controller.render.settler.tunic",
			    "controller.render.settler"
			],
			"enable_attachables": true,
            "spawn_egg": {
                "base_color": "#288483",
                "overlay_color": "#2B7135"
            }
        }
    }
}