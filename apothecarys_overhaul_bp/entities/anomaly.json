{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "apotso:anomaly",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "apotso:mode_switcher":{
        "minecraft:target_nearby_sensor": {
          "must_see": true,
          "inside_range": 2,
          "outside_range": 6,
          "on_vision_lost_inside_range": {
            "event": "apotso:switch_to_out_of_sight",
            "target": "self"
          },
          "on_inside_range": {
            "event": "apotso:switch_to_close_combat",
            "target": "self"
          },
          "on_outside_range": {
            "event": "apotso:switch_to_distant_combat",
            "target": "self"
          }
        }
      },
      "apotso:close_combat_mode":{
        "minecraft:behavior.melee_attack": {
          "priority": 4,
          "speed_multiplier": 1,
          "melee_fov": 90
        },
        "minecraft:attack": {
          "damage": 4,
          "effect_name": "weakness",
          "effect_duration": 13
        }
      },
      "apotso:distant_combat_mode":{
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "amplifier": 1,
              "duration": 13,
              "effect": "speed",
              "visible": true
            }
          ]
        },
        "minecraft:behavior.melee_attack": {
          "priority": 4,
          "speed_multiplier": 1,
          "melee_fov": 90
        },
        "minecraft:attack": {
          "damage": 4,
          "effect_name": "weakness",
          "effect_duration": 13
        }
      },
      "apotso:summon_vex":{
        "minecraft:spawn_entity": {
          "entities":{
            "single_use": true,
            "spawn_entity": "minecraft:vex",
            "num_to_spawn": 1,
            "min_wait_time": 0,
            "max_wait_time": 0
          }
        }
      }
    },
    "components": {
      "minecraft:experience_reward": {
        "on_bred": "Math.Random(1,7)",
        "on_death": "query.last_hit_by_player ? 5 : 0"
      },
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:type_family": {
        "family": ["undead","monster","mob"]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:can_climb": {},
      "minecraft:collision_box": {
        "width": 0.9,
        "height": 2.9
      },
      "minecraft:health": {
        "value": 150,
        "max": 150
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 1,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "undead"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "vex"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "illager"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "inanimate"
                }
              ]
            },
            "max_dist": 30
          }
        ],
        "must_see": false
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 2
      },
      "minecraft:mob_effect": {
        "effect_range": 20,
        "effect_time": 13,
        "mob_effect": "darkness",
        "cooldown_time": 6,
        "entity_filter": {
          "any_of": [
            { "test": "is_family", "subject": "other", "value": "player" },
            { "operator": "not", "test": "has_ability", "subject" : "other", "value" : "invulnerable" }
          ]
        }
      },
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "event": "advance_time",
            "target": "self",
            "filters": {
              "any_of":[
                {
                  "all_of": [
                    {
                      "test": "hourly_clock_time",
                      "operator": ">=",
                      "value": 22300
                    },
                    {
                      "test": "hourly_clock_time",
                      "operator": "<=",
                      "value": 2400
                    }
                  ]
                },
                {
                  "test": "hourly_clock_time",
                  "operator": "<=",
                  "value": 13670
                }
              ]
            }
          }
        ]
      },
      "minecraft:behavior.random_stroll": {
        "priority": 9,
        "speed_multiplier": 0.5
      },
      "minecraft:behavior.random_look_around": {
        "priority": 11
      },
      "minecraft:behavior.melee_attack": {
        "priority": 4,
        "speed_multiplier": 1,
        "melee_fov": 90
      },
      "minecraft:attack": {
        "damage": 4,
        "effect_name": "weakness",
        "effect_duration": 13
      },
      "minecraft:on_target_escape": {
        "event": "apotso:switch_to_out_of_sight",
        "target": "self"
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:fire_immune": {},
      "minecraft:nameable": {},
      "minecraft:loot": {
        "table": "loot_tables/entities/anomaly_death.loottable.json"
      }
    },
    "events": {
      "advance_time":{
        "run_command":{
          "command": "time add 50"
        }
      },
      "apotso:switch_to_out_of_sight":{
        "run_command":{
          "command": "say My target is out of sight"
        },
        "add": {
          "component_groups": [
            "apotso:summon_vex"
          ]
        },
        "remove": {
          "component_groups": [
            "apotso:close_combat_mode","apotso:distant_combat_mode"
          ]
        }
      },
      "apotso:switch_to_close_combat":{
        "run_command":{
          "command": "say My target is close range"
        },
        "add": {
          "component_groups": [
            "apotso:close_combat_mode"
          ]
        },
        "remove": {
          "component_groups": [
            "apotso:distant_combat_mode","apotso:summon_vex"
          ]
        }
      },
      "apotso:switch_to_distant_combat":{
        "run_command":{
          "command": "say My target is at a distance"
        },
        "add": {
          "component_groups": [
            "apotso:distant_combat_mode"
          ]
        },
        "remove": {
          "component_groups": [
            "apotso:close_combat_mode","apotso:summon_vex"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "apotso:mode_switcher"
          ]
        }
      }
    }
  }
}