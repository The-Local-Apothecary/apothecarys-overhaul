{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:witch",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "apotso:hermit":{
        "minecraft:type_family": {
          "family": [ "witch", "artisan", "mob" ]
        },
        "minecraft:economy_trade_table": {
          "display_name": "entity.witch.name",
          "table": "trading/economy_trades/witch_trades.json",
          "new_screen": true,
          "persist_trades": true
        },
        "minecraft:inventory": {
          "inventory_size": 8
        },
        "minecraft:behavior.trade_interest": {
          "priority": 10,
          "within_radius": 6.0,
          "interest_time": 45.0,
          "remove_item_time": 1.0,
          "carried_item_switch_time": 2.0,
          "cooldown": 2.0
        },
        "minecraft:behavior.look_at_trading_player": {
          "priority": 7
        },
        "minecraft:behavior.trade_with_player": {
          "priority": 2
        }
      },
      "trade_resupply_component_group": {
        "minecraft:trade_resupply": {}
      },
      "daytime_schedule_hermit":{
        "minecraft:behavior.move_to_block": {
          "priority": 10,
          "tick_interval": 1,
          "start_chance": 0.5,
          "search_range": 6,
          "search_height": 4,
          "goal_radius": 1.0,
          "stay_duration": 2.0,
          "target_selection_method": "random",
          "target_offset": [0, 0.25, 0],
          "target_blocks": [
              "minecraft:brown_mushroom",
              "minecraft:red_mushroom"
          ],
          "on_stay_completed": [
            {
              "event": "minecraft:resupply_trades",
              "target": "self"
            }
          ]
        },
        "minecraft:break_blocks": {
          "breakable_blocks": [
            "minecraft:brown_mushroom",
              "minecraft:red_mushroom"
          ]
        },
        "minecraft:shareables": {
          "all_items": false,
          "all_items_max_amount": -1,
          "all_items_surplus_amount": -1,
          "all_items_want_amount": -1,
          "items": [
            {
              "item": "minecraft:red_mushroom",
              "want_amount": 4,
              "surplus_amount": 1,
              "stored_in_inventory": true
            },
            {
              "item": "minecraft:brown_mushroom",
              "want_amount": 4,
              "surplus_amount": 1,
              "stored_in_inventory": true
            }
          ]
        },
        "minecraft:behavior.pickup_items": {
          "priority": 6,
          "max_dist": 10,
          "goal_radius": 2,
          "speed_multiplier": 0.8,
          "pickup_based_on_chance": false,
          "can_pickup_any_item": false,
          "cooldown_after_being_attacked": 20.0
        }
      },
      "work_schedule_hermit":{
        "minecraft:behavior.move_to_block": {
          "priority": 10,
          "tick_interval": 1,
          "start_chance": 0.5,
          "search_range": 6,
          "search_height": 4,
          "goal_radius": 1.0,
          "stay_duration": 2.0,
          "target_selection_method": "random",
          "target_offset": [0, 0.25, 0],
          "target_blocks": [
              "minecraft:soul_sand",
              "minecraft:soul_soil"
          ],
          "on_stay_completed": [
            {
              "event": "minecraft:resupply_trades",
              "target": "self"
            }
          ]
        }
      },
      "hermit_schedule":{
        "minecraft:scheduler": {
          "min_delay_secs": 0,
          "max_delay_secs": 10,
          "scheduled_events": [
            {
              "filters": {
                "all_of":[
                  { "test": "hourly_clock_time", "operator": ">=", "value": 0 },
                  { "test": "hourly_clock_time", "operator": "<", "value": 12000 }
                ]
              },
              "event": "apotso:schedule_daytime_hermit"
            },
            {
              "filters": {
                "all_of": [
                  { "test": "hourly_clock_time", "operator": ">=", "value": 12000 },
                  { "test": "hourly_clock_time", "operator": "<", "value": 24000 }
                ]
              },
              "event": "apotso:schedule_work_hermit"
            }
          ]
        }
      },
      "minecraft:celebrate": {
        "minecraft:behavior.celebrate": {
          "priority": 5,
          "celebration_sound": "celebrate",
          "sound_interval": {
            "range_min": 2.0,
            "range_max": 7.0
          },
          "jump_interval": {
            "range_min": 1.0,
            "range_max": 3.5
          },
          "duration": 30.0,
          "on_celebration_end_event": {
            "event": "minecraft:stop_celebrating",
            "target": "self"
          }
        }
      },
      "minecraft:raid_configuration": {
        "minecraft:type_family": {
          "family": [ "witch", "monster", "mob" ]
        },
        "minecraft:dweller": {
          "dwelling_type": "village",
          "dweller_role": "hostile",
          "update_interval_base": 60,
          "update_interval_variant": 40,
          "can_find_poi": false,
          "can_migrate": false,
          "first_founding_reward": 0
        },
        "minecraft:behavior.move_to_village": {
          "priority": 3,
          "speed_multiplier": 1.2,
          "goal_radius": 2.0
        },
        "minecraft:ambient_sound_interval": {
          "value": 2.0,
          "range": 4.0,
          "event_name": "ambient.in.raid"
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "snowgolem"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "irongolem"
                  }
                ]
              },
              "max_dist": 10
            }
          ],
          "must_reach": true
        }
      }
    },
    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? (query.is_baby ? 12 : 5) + (Math.die_roll(query.equipment_count,1,3)) : 0"
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:nameable": {
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/witch.json"
      },
      "minecraft:health": {
        "value": 26,
        "max": 26
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.float": {
        "priority": 1
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 2,
        "speed_multiplier": 1.0,
        "attack_interval_min": 3,
        "attack_interval_max": 3,
        "attack_radius": 10.0
      },
      "minecraft:behavior.random_stroll": {
        "priority": 4,
        "speed_multiplier": 1.0
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
        "look_distance": 8.0
      },
      "minecraft:behavior.random_look_around": {
        "priority": 5,
        "look_distance": 8.0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:follow_range": {
        "value": 64
      },
      "minecraft:conditional_bandwidth_optimization": {}
    },
    "events": {
      "apotso:schedule_daytime_hermit":{
        "add": {
          "component_groups": [
            "daytime_schedule_hermit"
          ]
        },
        "remove": {
          "component_groups": ["trade_resupply_component_group", "work_schedule_hermit"]
        }
      },
      "apotso:schedule_work_hermit":{
        "remove": {
          "component_groups": ["trade_resupply_component_group", "daytime_schedule_hermit"]
        },
        "add": {
          "component_groups": ["work_schedule_hermit"]
        }
      },
      "minecraft:resupply_trades":{
        "add": {
          "component_groups": [
            "trade_resupply_component_group"
          ]
        },
        "run_command":{
          "command":["particle apotso:spell_casted"]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["apotso:hermit", "hermit_schedule"]
        }
      },
      "minecraft:spawn_for_raid": {
        "add": {
          "component_groups": [
            "minecraft:raid_configuration"
          ]
        },
        "remove": {
          "component_groups": ["apotso:hermit", "hermit_schedule"]
        }
      },
      "minecraft:start_celebrating": { // Event must be called exactly this for village to fire it when a raid is lost
        "add": { "component_groups": [ "minecraft:celebrate" ] }
      },
      "minecraft:stop_celebrating": {
        "remove": { "component_groups": [ "minecraft:celebrate" ] }
      }
    }
  }
}
