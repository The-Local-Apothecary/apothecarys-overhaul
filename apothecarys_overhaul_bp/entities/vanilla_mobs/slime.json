{
  "format_version": "1.18.10",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:slime",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "despawn:instant":{
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      },
      "apotso:growing_slime":{
        "minecraft:timer": {
          "time": 60,
          "looping": true,
          "time_down_event": {
            "event": "grow",
            "target": "self"
          }
        }
      },
      "minecraft:slime_large": {
        "minecraft:variant": {
          "value": 4
        },
        "minecraft:collision_box": {
          "width": 2.08,
          "height": 2.08
        },
        "minecraft:health": {
          "value": 16,
          "max": 16
        },
        "minecraft:movement": {
          "value": 0.6
        },
        "minecraft:attack": {
          "damage": 4
        }, 
        "minecraft:behavior.slime_attack": {
        "priority": 5
        },
        "minecraft:behavior.hurt_by_target": {
          "alert_same_type": false,
          "hurt_owner": false
        }
      },
      "minecraft:slime_medium": {
        "minecraft:variant": {
          "value": 2
        },
        "minecraft:collision_box": {
          "width": 1.04,
          "height": 1.04
        },
        "minecraft:health": {
          "value": 4,
          "max": 4
        },
        "minecraft:movement": {
          "value": 0.4
        }
      },
      "minecraft:slime_small": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:collision_box": {
          "width": 0.52,
          "height": 0.52
        },
        "minecraft:health": {
          "value": 1,
          "max": 1
        },
        "minecraft:movement": {
          "value": 0.3
        }
      },
      "minecraft:slime_calm": {
        "minecraft:movement.jump": {
          "jump_delay": [ 0.5, 1.5 ]
        }
      },
      "minecraft:slime_aggressive": {
        "minecraft:angry": {
          "duration": 30,
          "broadcast_anger": true,
          "broadcast_anger_on_attack": true,
          "broadcast_anger_on_being_attacked": true,
          "broadcast_range": 16,
          "broadcast_targets": [
            "slime" // we want to broadcast to both normal piglins and piglin_brute
          ],
          "calm_event": {
            "event": "minecraft:become_calm",
            "target": "self"
          },
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "piglin"
              },
              {
                "test": "has_component",
                "subject": "self",
                "operator": "!=",
                "value": "minecraft:attack_cooldown"
              }
            ]
          },
          "angry_sound": "angry",
          "sound_interval": {
            "range_min": 2.0,
            "range_max": 5.0
          }
        },
        "minecraft:movement.jump": {
          "jump_delay": [ 0.16, 0.5 ]
        }
      },
      "attack_cooldown": {
        "minecraft:attack_cooldown": {
          "attack_cooldown_time": [ 30.0, 120.0 ],
          "attack_cooldown_complete_event": {
            "event": "attack_cooldown_complete_event",
            "target": "self"
          }
        }
      }
    },

    "components": {
      "minecraft:interact": {
        "interactions": [
          {
            "use_item": false,
            "hurt_item": 1,
            "spawn_items": { "table": "loot_tables/entities/slime.json" },
            "play_sounds": "shear",
            "interact_text": "action.interact.shear",
            "vibration": "shear",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "shears"},
                  { "test" :  "is_family", "subject" : "other", "value" :  "player"},
                  { "test" :  "is_variant", "operator": "!=", "value" :  1}
                ]
              },
              "event": "become_small",
              "target": "self"
            },
            "particle_on_start": { "particle_type": "largeexplode", "particle_y_offset": 0.25, "particle_offset_towards_interactor": true }
          },
          {
            "use_item": true,
            "hurt_item": 1,
            "transform_to_item": "apotso:slime_bucket",
            "play_sounds": "shear",
            "interact_text": "action.interact.bucket",
            "vibration": "shear",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "bucket"},
                  { "test" :  "is_family", "subject" : "other", "value" :  "player"},
                  { "test" :  "is_variant", "operator": "==", "value" :  1}
                ]
              },
              "event": "apotso:bucket",
              "target": "self"
            }
          }
        ]
      },
      "minecraft:scheduler": {
        "min_delay_secs": 0,
        "max_delay_secs": 0,
        "scheduled_events": [
          {
            "filters": {
              "all_of": [
                {
                  "all_of": [
                    { "test": "hourly_clock_time", "operator": ">=", "value": 0 },
                    { "test": "hourly_clock_time", "operator": "<", "value": 12000 }
                  ]
                },
                {
                  "any_of":[
                    {
                      "test": "is_variant",
                      "value": 2
                    },
                    {
                      "test": "is_variant",
                      "value": 1
                    }
                  ]
                }
              ]
            },
            "event": "stop_growing"
          },
          {
            "filters": {
              "all_of": [
                {
                  "all_of": [
                    { "test": "hourly_clock_time", "operator": ">=", "value": 12000 },
                    { "test": "hourly_clock_time", "operator": "<", "value": 24000 }
                  ]
                },
                {
                  "any_of":[
                    {
                      "test": "is_variant",
                      "value": 2
                    },
                    {
                      "test": "is_variant",
                      "value": 1
                    }
                  ]
                }
              ]
            },
            "event": "start_growing"
          }
        ]
      },
      "minecraft:is_hidden_when_invisible": {},
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? query.variant : 0"
      },
      "minecraft:type_family": {
        "family": [ "slime", "monster", "mob" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": true
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement.jump": {
        "jump_delay": [ 0.5, 1.5 ]
      },
      "minecraft:on_target_acquired": {
        "event": "minecraft:become_aggressive",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "minecraft:become_calm",
        "target": "self"
      },
      "minecraft:nameable": {},
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.slime_float": {
        "priority": 1,
        "jump_chance_percentage": 0.8,
        "speed_multiplier": 1.2
      },
      "minecraft:behavior.slime_random_direction": {
        "priority": 2,
        "add_random_time_range": 3,
        "turn_range": 360,
        "min_change_direction_time": 2.0
      },
      "minecraft:behavior.slime_keep_on_jumping": {
        "priority": 3,
        "speed_multiplier": 1.0
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": [
                {
                  "test": "has_damage",
                  "subject": "self",
                  "value": "fatal"
                },
                {
                  "test": "is_variant",
                  "subject": "self",
                  "operator": "!=",
                  "value": 1
                }
              ],
              "event": "become_small",
              "target": "self"
            },
            "deals_damage": false
          }
        ]
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "apotso:bucket":{
        "add": {
          "component_groups": [
            "despawn_instant"
          ]
        }
      },
      "start_growing":{
        "add": {
          "component_groups": [
            "apotso:growing_slime"
          ]
        }
      },
      "stop_growing":{
        "remove": {
          "component_groups": [
            "apotso:growing_slime"
          ]
        }
      },
      "become_small": {
        "sequence": [
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 4
            },
            "trigger": "spawn_medium"
          },
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 2
            },
            "trigger": "spawn_small"
          }
        ]
      },
      "grow":{
        "sequence": [
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 2
            },
            "trigger": "spawn_large"
          },
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 1
            },
            "trigger": "spawn_medium"
          }
        ]
      },
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 1,
            "trigger": "spawn_small"
          },
          {
            "weight": 1,
            "trigger": "spawn_medium"
          },
          {
            "weight": 1,
            "trigger": "spawn_large"
          }
        ]
      },
      "spawn_small": {
        "add": {
          "component_groups": [
            "minecraft:slime_small"
          ]
        },
        "trigger": "become_calm",
        "remove": {
          "component_groups": [
            "minecraft:slime_medium","minecraft:slime_large"
          ]
        }
      },
      "spawn_medium": {
        "add": {
          "component_groups": [
            "minecraft:slime_medium"
          ]
        },
        "trigger": "become_calm",
        "remove": {
          "component_groups": [
            "minecraft:slime_small","minecraft:slime_large"
          ]
        }
      },
      "spawn_large": {
        "add": {
          "component_groups": [
            "minecraft:slime_large"
          ]
        },
        "trigger": "become_calm",
        "remove": {
          "component_groups": [
            "minecraft:slime_small","minecraft:slime_medium"
          ]
        }
      },
      "minecraft:become_calm": {
        "add": {
          "component_groups": [
            "minecraft:slime_calm","attack_cooldown"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:slime_aggressive"
          ]
        }
      },
      "minecraft:become_aggressive": {
        "add": {
          "component_groups": [
            "minecraft:slime_aggressive"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:slime_calm"
          ]
        }
      },
      "attack_cooldown_complete_event": {
        "remove": {
          "component_groups": [
            "attack_cooldown"
          ]
        }
      }
    }
  }
}