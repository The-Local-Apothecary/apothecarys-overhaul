{
    "format_version": "1.16.0",
    "minecraft:entity": {
      "description": {
        "identifier": "apotso:linger",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false
      },
      "component_groups": {
        "apotso:despawned":{
            "minecraft:instant_despawn": {
                "remove_child_entities": false
            }
        },
  
        "minecraft:frost_steed_angry": {
          "minecraft:angry": {
            "duration": 25,
            "broadcast_anger": true,
            "broadcast_range": 20,
            "calm_event": {
              "event": "minecraft:on_calm",
              "target": "self"
            }
          }
        },
  
        "minecraft:frost_steed_tame": {
          "minecraft:is_tamed": {
          },
          "minecraft:health": {
            "value": 20,
            "max": 20
          },
          "minecraft:behavior.follow_owner": {
            "priority": 6,
            "speed_multiplier": 1.0,
            "start_distance": 5,
            "stop_distance": 2
          },
          "minecraft:attack": {
            "damage": 4
          },
          "minecraft:behavior.owner_hurt_by_target": {
            "priority": 1
          },
          "minecraft:behavior.owner_hurt_target": {
            "priority": 2
          },
          "minecraft:behavior.nearest_attackable_target": {
            "priority": 5,
            "must_see": true,
            "entity_types": [
              {
                "filters": { "test" :  "is_family", "subject" : "other", "value" :  "skeleton"},
                "max_dist": 16
              }
            ]
          }
        },
        "apotso:melee_mode":{
          "minecraft:behavior.melee_attack": {
            "melee_fov": 90,
            "speed_multiplier": 1.5,
            "track_target": true,
            "reach_multiplier": 2
          },
          "minecraft:damage_sensor": {
            "triggers": [
              {
                "cause": "attack",
                "deals_damage": true,
                "on_damage": {
                  "event": "apotso:switch_to_roar",
                  "target": "self"
                }
              }
            ]
          }
        },
        "apotso:roar_mode":{
          "minecraft:knockback_resistance": {
            "protection": 1
          },
          "minecraft:behavior.knockback_roar": {
            "attack_time": 0.5,
            "cooldown_time": 0,
            "duration": 1,
            "knockback_damage": 3,
            "knockback_horizontal_strength": 4,
            "knockback_range": 4,
            "knockback_vertical_strength": 4,
            "track_target": false,
            "knockback_strength": 4,
            "on_roar_end":{
              "event": "apotso:switch_to_melee",
              "target": "self"
            }
          }
        }
      },
  
  
      "components": {
        "minecraft:is_hidden_when_invisible": {
        },
        "minecraft:nameable": {
        },
        "minecraft:type_family": {
          "family": [ "summon", "mob" ]
        },
        "minecraft:breathable": {
          "total_supply": 15,
          "suffocate_time": 0
        },
        "minecraft:collision_box": {
          "width": 0.6,
          "height": 0.8
        },
        "minecraft:health": {
          "value": 15,
          "max": 15
        },
        "minecraft:hurt_on_condition": {
          "damage_conditions": [
            {
              "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
              "cause": "lava",
              "damage_per_tick": 0
            }
          ]
        },
        "minecraft:movement": {
          "value": 0.3
        },
        "minecraft:knockback_resistance": {
          "value": 0.5
        },
        "minecraft:navigation.walk": {
          "can_path_over_water": false,
          "avoid_damage_blocks": true
        },
        "minecraft:movement.basic": {
        },
        "minecraft:jump.static": {
        },
        "minecraft:can_climb": {
        },
        "minecraft:attack": {
          "damage": 3
        },
        "minecraft:despawn": {
          "despawn_from_distance": {}
        },
        "minecraft:behavior.float": {
          "priority": 0
        },
        "minecraft:behavior.move_towards_target": {
          "priority": 2,
          "within_radius": 16
        },
        "minecraft:timer": {
            "looping": true,
            "time": 20,
            "time_down_event": {
                "event": "apotso:despawn",
                "target": "self"
            }
        },
        "minecraft:behavior.mount_pathing": {
          "priority": 1,
          "speed_multiplier": 1.25,
          "target_dist": 0,
          "track_target": true
        },
        "minecraft:behavior.look_at_player": {
          "priority": 6,
          "target_distance": 6.0,
          "probability": 0.02
        },
        "minecraft:on_target_acquired": {
          "event": "apotso:switch_to_melee",
          "target": "self"
        },
        "minecraft:behavior.hurt_by_target": {
          "priority": 3
        },
        "minecraft:physics": {
        },
        "minecraft:pushable": {
          "is_pushable": true,
          "is_pushable_by_piston": true
        },
        "minecraft:conditional_bandwidth_optimization": {
        }
      },
  
  
      "events": {
          "apotso:despawn":{
            "filters": {
              "test": "has_target",
              "subject": "self",
              "value": false
            },
              "add": {
                  "component_groups": ["apotso:despawned"]
              }
          },
        "apotso:switch_to_melee":{
          "add": {
            "component_groups": [
              "apotso:melee_mode"
            ]
          },
          "remove": {
            "component_groups": [
              "apotso:roar_mode"
            ]
          }
        },
        "apotso:switch_to_roar":{
          "add": {
            "component_groups": [
              "apotso:roar_mode"
            ]
          },
          "remove": {
            "component_groups": [
              "apotso:melee_mode"
            ]
          }
        },
        "minecraft:on_tame": {
          "add": {
            "component_groups": ["minecraft:frost_steed_tame", "apotso:melee_mode"]
          }
        },
        "minecraft:become_angry": {
          "add": {
            "component_groups": [
              "minecraft:frost_steed_angry"
            ]
          }
        },
        "minecraft:on_calm": {
          "remove": {
            "component_groups": [
              "minecraft:frost_steed_angry"
            ]
          }
        }
      }
    }
  }
  