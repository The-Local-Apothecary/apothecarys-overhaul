        "minecraft:durability": {
          "max_durability": 1562
        },
        "minecraft:repairable": {
            "repair_items": [
              {
                "repair_amount": "context.other->query.remaining_durability + 0.05 * context.other->query.max_durability",
                "items": [
                  "sculk_sensor",
                  "apotso:soul_cleaver"
                ]
              },
              {
                "repair_amount": 300,
                "items": [
                  "minecraft:sculk_sensor"
                ]
              }
            ]
        },
        "minecraft:hand_equipped": true,
        "minecraft:creative_category":{
          "parent": "itemGroup.name.sword"
      }
      },
      "events": {
        "apotso:cast":{
          "sequence": [
            {
              "condition": "query.is_sneaking && query.player_level >= 2",
              "swing": {},
              "add_mob_effect": {
                "amplifier": 1,
                "effect": "regeneration",
                "duration": 4,
                "target": "holder"
              },
              "damage":{
                "amount": 2,
                "target": "self",
                "type": "durability"
              }
            },
            {
              "condition": "!query.is_sneaking && query.player_level >= 2",
              "add_mob_effect": {
                  "amplifier": 1,
                  "duration": 5,
                  "effect": "speed",
                  "target": "holder"
              },
              "damage":{
                "amount": 2,
                "target": "self",
                "type": "durability"
              }
            },
            {
              "condition": "query.player_level >= 2",
              "run_command":{
                "command": ["xp -2L"]
              }
            }
          ]
        },
        "apotso:on_hurt_entity":{
          "sequence":[
            {
              "damage":{
                "amount": 1,
                "target": "self",
                "type": "durability"
              }
            },
            {
              "run_command":{
                "command": ["xp 4"]
              }
            }
          ]
        }
      }
    }
  }