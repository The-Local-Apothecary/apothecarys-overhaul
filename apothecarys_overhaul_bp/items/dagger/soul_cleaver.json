{
    "format_version": "1.16.100",
   "minecraft:item": {
      "description": {
        "identifier": "apotso:soul_cleaver",
        "category": "equipment"
      },
      "components": {
        "minecraft:damage":5,
        "minecraft:icon": {
            "texture": "soul_cleaver"
