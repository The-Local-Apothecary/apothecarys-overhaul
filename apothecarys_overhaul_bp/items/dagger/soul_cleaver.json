        "minecraft:display_name": {
          "value": "item.apotso:soul_cleaver.name"
        },
        "minecraft:max_stack_size":1,
        "minecraft:weapon":{
            "on_hurt_entity" : {
                "event": "apotso:on_hurt_entity"
            }
